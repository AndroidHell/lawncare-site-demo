---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import ContentSection from "~/components/content-section.astro";
import galleryImage1 from "~/assets/galleryImage1.jpg";
import galleryImage2 from "~/assets/galleryImage2.jpg";
import galleryImage3 from "~/assets/galleryImage3.jpg";
import galleryImage4 from "~/assets/galleryImage4.jpg";
import galleryImage5 from "~/assets/galleryImage5.jpg";
---

<ContentSection title="Showcase" id="showcase">
  <Fragment slot="lead">
    <span class="text-primary">Check out</span> what all we can do by
    <span class="text-primary">Clicking</span> on the image gallery below.
  </Fragment>
</ContentSection>

<div class="mx-auto max-w-6xl">
  <div id="default-carousel" class="relative z-0" data-carousel="slide">
    <!-- Carousel wrapper -->
    <div
      class="relative h-56 overflow-hidden rounded-lg sm:h-64 xl:h-80 2xl:h-96"
    >
      <!-- Item 1 -->
      <div class="hidden duration-700 ease-in-out" data-carousel-item="active">
        <span
          class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 font-semibold text-white text-2xl sm:text-3xl dark:text-gray-800"
          >First Slide</span
        >
        <Image
          class="absolute left-1/2 top-1/2 block w-full -translate-x-1/2 -translate-y-1/2"
          src={galleryImage1}
          loading="eager"
          alt="First gallery image."
        />
      </div>
      <!-- Item 2 -->
      <div class="hidden duration-700 ease-in-out" data-carousel-item>
        <Image
          class="absolute left-1/2 top-1/2 block w-full -translate-x-1/2 -translate-y-1/2"
          src={galleryImage2}
          loading="eager"
          alt="Second gallery image."
        />
      </div>
      <!-- Item 3 -->
      <div class="hidden duration-700 ease-in-out" data-carousel-item>
        <Image
          class="absolute left-1/2 top-1/2 block w-full -translate-x-1/2 -translate-y-1/2"
          src={galleryImage3}
          loading="eager"
          alt="Third gallery image."
        />
      </div>
      <!-- Item 4 -->
      <div class="hidden duration-700 ease-in-out" data-carousel-item>
        <Image
          class="absolute left-1/2 top-1/2 block w-full -translate-x-1/2 -translate-y-1/2"
          src={galleryImage4}
          loading="eager"
          alt="Fourth gallery image."
        />
      </div>
      <div class="hidden duration-700 ease-in-out" data-carousel-item>
        <Image
          class="absolute left-1/2 top-1/2 block w-full -translate-x-1/2 -translate-y-1/2"
          src={galleryImage5}
          loading="eager"
          alt="Fifth gallery image."
        />
      </div>
    </div>
    <!-- Slider indicators -->
    <div
      class="absolute bottom-5 left-1/2 z-30 flex -translate-x-1/2 space-x-3"
    >
      <button
        type="button"
        class="carousel-indicator h-3 w-3 rounded-full"
        aria-current="false"
        aria-label="Slide 1"
        data-carousel-slide-to="0"></button>
      <button
        type="button"
        class="carousel-indicator h-3 w-3 rounded-full"
        aria-current="false"
        aria-label="Slide 2"
        data-carousel-slide-to="1"></button>
      <button
        type="button"
        class="carousel-indicator h-3 w-3 rounded-full"
        aria-current="false"
        aria-label="Slide 3"
        data-carousel-slide-to="2"></button>
      <button
        type="button"
        class="carousel-indicator h-3 w-3 rounded-full"
        aria-current="false"
        aria-label="Slide 4"
        data-carousel-slide-to="3"></button>
      <button
        type="button"
        class="carousel-indicator h-3 w-3 rounded-full"
        aria-current="false"
        aria-label="Slide 5"
        data-carousel-slide-to="4"></button>
    </div>
    <!-- Slider controls -->
    <button
      type="button"
      class="group absolute left-0 top-0 z-30 flex h-full cursor-pointer items-center justify-center px-4 focus:outline-none"
      data-carousel-prev
    >
      <span
        class="inline-flex h-8 w-8 items-center justify-center rounded-full group-hover:bg-white/50 group-focus:outline-none sm:h-10 sm:w-10"
        style="transition: background-color 0.3s;"
      >
        <svg
          class="h-5 w-5 text-white sm:h-6 sm:w-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"></path>
        </svg>
        <span class="hidden">Previous</span>
      </span>
    </button>
    <button
      type="button"
      class="group absolute right-0 top-0 z-30 flex h-full cursor-pointer items-center justify-center px-4 focus:outline-none"
      data-carousel-next
    >
      <span
        class="inline-flex h-8 w-8 items-center justify-center rounded-full group-hover:bg-white/50 group-focus:outline-none sm:h-10 sm:w-10"
        style="transition: background-color 0.3s;"
      >
        <svg
          class="h-5 w-5 text-white sm:h-6 sm:w-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="hidden">Next</span>
      </span>
    </button>
  </div>
</div>
<script src="https://unpkg.com/flowbite@1.4.0/dist/flowbite.js"></script>

<style>
  .carousel-indicator {
    background-color: #ffffff80;
    transition: background-color 0.3s;
  }
  .carousel-indicator[aria-current="true"] {
    background-color: #ffffff;
  }
  .carousel-indicator:hover {
    background-color: #ffffff;
  }
</style>
