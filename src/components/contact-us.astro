---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";
---

<ContentSection title="Contact Us" id="contactus">
  <Fragment slot="lead">
    <div>
      <div
        class="items-top relative flex justify-center sm:items-center sm:pt-0"
      >
        <div class="mx-auto max-w-6xl sm:px-6 lg:px-8">
          <div class="mt-8 overflow-hidden">
            <div class="grid grid-cols-1 md:grid-cols-2">
              <div class="mr-2 p-6 sm:rounded-lg">
                <p
                  class="text-normal mt-2 font-medium text-gray-600 text-lg sm:text-2xl"
                >
                  Fill in the form and we will get in touch
                </p>

                <div class="mt-8 flex items-center text-gray-600">
                  <svg
                    fill="none"
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    viewBox="0 0 24 24"
                    class="h-8 w-8 text-gray-500"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <div class="text-md ml-4 w-40 font-semibold tracking-wide">
                    123 Green Lane, Garden City, NY 11530
                  </div>
                </div>

                <div class="mt-4 flex items-center text-gray-600">
                  <svg
                    fill="none"
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    viewBox="0 0 24 24"
                    class="h-8 w-8 text-gray-500"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                  </svg>
                  <div class="text-md w-50 ml-4 font-semibold tracking-wide">
                    <p>(123) 456-7890</p>
                  </div>
                </div>

                <div class="mt-2 flex items-center text-gray-600">
                  <svg
                    fill="none"
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    viewBox="0 0 24 24"
                    class="h-8 w-8 text-gray-500"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                  <div class="text-md ml-4 w-40 font-semibold tracking-wide">
                    walker.lawn.care@gmail.com
                  </div>
                </div>
              </div>

              <form class="flex flex-col justify-center p-6">
                <div class="flex flex-col">
                  <label for="name" class="hidden">Full Name</label>
                  <input
                    type="name"
                    name="name"
                    id="name"
                    placeholder="Full Name"
                    class="w-100 mt-2 rounded-lg border border-gray-400 bg-white px-3 py-3 font-semibold focus:border-green-700 focus:outline-none"
                  />
                </div>

                <div class="mt-2 flex flex-col">
                  <label for="email" class="hidden">Email</label>
                  <input
                    type="email"
                    name="email"
                    id="email"
                    placeholder="Email"
                    class="w-100 mt-2 rounded-lg border border-gray-400 bg-white px-3 py-3 font-semibold focus:border-green-700 focus:outline-none"
                  />
                </div>

                <div class="mt-2 flex flex-col">
                  <label for="tel" class="hidden">Number</label>
                  <input
                    type="tel"
                    name="tel"
                    id="tel"
                    placeholder="Telephone Number"
                    class="w-100 mt-2 rounded-lg border border-gray-400 bg-white px-3 py-3 font-semibold focus:border-green-700 focus:outline-none"
                  />
                </div>

                <button
                  type="submit"
                  class="hover:bg-blue-dark mt-3 rounded-lg bg-green-700 px-6 py-3 font-bold text-white transition duration-300 ease-in-out hover:bg-green-500 md:w-32"
                >
                  Submit
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Fragment>
</ContentSection>
