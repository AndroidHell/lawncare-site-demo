---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import lawnmowerImage from "~/assets/lawnmower.png";
import lawnImage from "~/assets/lawn.jpg";
import HeroImage from "~/components/hero-image.astro";
import Lawnding from "~/components/lawnding.astro";
import GitHubCorner from "./github-corner.astro";

const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<section class="relative h-full bg-white">
  <div class="absolute inset-0 z-0">
    <Lawnding />
  </div>

  <div
    class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-25 p-8"
  >
    <div class="">
      <div class="relative grid h-full place-items-center sm:grid-cols-2">
        <h2
          class="flex flex-col items-center gap-2 self-end sm:gap-4 sm:self-auto sm:justify-self-end"
        >
          <!-- <Icon name="logomark" class="size-24 text-white md:size-32" /> -->
          <!-- <Icon name="logo" class="size-24 text-green-700 md:size-60" /> -->
          <div
            class="text-center font-bold tracking-tighter text-amber-200 text-8xl"
          >
            Walker & Sons
          </div>
          <div
            class="font-regular text-center tracking-tighter text-amber-100 text-6xl"
          >
            Lawncare Pros
          </div>
        </h2>
        <div
          id="mower"
          class="w-2/3 max-w-3xl self-start sm:w-10/12 sm:self-auto sm:justify-self-start sm:pl-32"
        >
          <Image
            class="h-full w-full object-cover"
            src={lawnmowerImage}
            widths={widths}
            sizes={sizes}
            loading="eager"
            alt="A fine clipart of a lawnmower and a rake."
          />
        </div>
      </div>
    </div>
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  .bg-gradient-ellipse {
    background: radial-gradient(
      ellipse at center,
      rgba(0, 0, 0, 0.25),
      transparent
    );
  }
